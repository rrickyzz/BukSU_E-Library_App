<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:id="@+id/search_result_item_frame"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_marginTop="50dp"
    android:elevation="2dp"


    >

    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/pdf" />

        <TextView


            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:id="@+id/search_result_item_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Book"
            android:textColor="@color/textSecondary"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"/>

        >

        <TextView
            android:id="@+id/search_result_item_author"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: "
            android:textColor="@color/textSecondary"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/search_result_item_category"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrieve from: "
            android:textColor="@color/textSecondary"
            android:textSize="10sp"/>



    </LinearLayout>




</FrameLayout>