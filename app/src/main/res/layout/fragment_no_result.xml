<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BookSearchHelper.NoResultFragment">




    <ImageView
        android:id="@+id/noResultImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/no_result_found_vector"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/noResultFoundTextView"
        android:layout_below="@+id/noResultImageView"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textPrimary"
        android:text="No result found for "/>







    <TextView

        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/noResultFoundSearchAgainTextView"
        android:layout_below="@+id/noResultFoundTextView"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/buksuPrimary"
        android:text="@string/searchAgain"/>





</RelativeLayout>