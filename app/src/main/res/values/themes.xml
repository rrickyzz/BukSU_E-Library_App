<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BukSUELibraryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buksuSecondary</item>
         <item name="colorPrimaryVariant">@color/buksuPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="buksu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="colorPrimary">@color/white</item>

        <item name="android:windowBackground">@color/buksuPrimary</item>
        <item name="android:statusBarColor">@color/buksuPrimary</item>

        <!--pop up style-->
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="popupTheme">@style/PopupMenu</item>
        <item name="popupWindowStyle">@style/PopupMenu</item>
        <item name="android:popupTheme">@style/PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/PopupMenu</item>
     </style>



    <style name="buksu2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/buksuPrimary</item>
        <item name="android:statusBarColor">@color/buksuPrimary</item>
    </style>


    <style name="buksuHomeActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/buksuPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/buksuPrimary</item>
        <item name="android:statusBarColor">@color/buksuPrimary</item>
    </style>





    <style name="errorDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/dialogTitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/dialogBodyTextStyle</item>
      </style>

    <style name="dialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="negativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="positiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="successDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/dialogTitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/negativeButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/dialogBodyTextStyle</item>
    </style>

    <style name="form" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tabTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/buksuSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="tabGravity">fill</item>
        <item name="itemRippleColor">@color/buksuSecondary</item>
        <item name="itemMaxLines">1</item>
        <item name="fontFamily">@font/monserrat_regular</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Title">

        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">@color/textSecondary</item>

    </style>










</resources>